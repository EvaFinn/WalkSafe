<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Basic Settings">
        <EditTextPreference
            android:key="user_name"
            android:summary="set username"
            android:title="User Name" />

        <ListPreference
            android:key="message_preferences"
            android:summary="%s"
            android:title="Message Preference"
            android:entries="@array/messages"
            android:entryValues="@array/messages"/>

        <PreferenceScreen
            android:title="Emergency Contact"
            android:summary="Choose a contact to send message to"
            android:key="contactsPreference">
            <intent android:action="android.intent.action.VIEW"
                android:targetPackage="eva.walksafe"
                android:targetClass="eva.walksafe.ContactsActivity"/>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
